<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/whiteColor">

    <TextView
        android:id="@+id/menu_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/menu_app_slogan"
        android:textSize="24sp"
        android:text="@string/app_tittle"
        android:fontFamily="@font/brandon_grotesque_bold"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/menu_app_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/app_slogan"
        android:fontFamily="@font/brandon_grotesque_medium"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"/>
