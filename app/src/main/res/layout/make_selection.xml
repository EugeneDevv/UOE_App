<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".Common.LoginSignUp.MakeSelection"
    android:padding="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_icon"
        android:padding="5dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="start"
                android:text="Make\nSelection"
                android:textAllCaps="true"
                android:textSize="40sp"
                android:fontFamily="@font/brandon_grotesque_bold"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/make_selection_desc"
                android:textSize="16sp"
                android:fontFamily="@font/brandon_grotesque_medium" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginTop="30dp"
                android:background="@color/light_grey">
                <ImageView
                    android:id="@+id/phone_icon_ms"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/phone_icon"
                    android:src="@drawable/phone_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20sp"/>
                <TextView
                    android:id="@+id/phone_title_ms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="via sms:"
                    android:layout_toRightOf="@id/phone_icon_ms"
                    android:layout_marginTop="40dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="+25490868398"
                    android:layout_toRightOf="@id/phone_icon_ms"
                    android:layout_below="@id/phone_title_ms"
                    android:textColor="@color/colorAccent"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:onClick="callSetNewPassword"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_grey">
                <ImageView
                    android:id="@+id/email_icon_ms"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/mail_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20sp"/>
                <TextView
                    android:id="@+id/email_title_ms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="via mail:"
                    android:layout_toRightOf="@id/email_icon_ms"
                    android:layout_marginTop="40dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="support@gmail.com"
                    android:layout_toRightOf="@id/email_icon_ms"
                    android:layout_below="@id/email_title_ms"
                    android:textColor="@color/colorAccent"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:onClick="callSetNewPassword"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>